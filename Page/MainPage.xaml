<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:partial="clr-namespace:RecipeVault.ViewPartial"
             x:Class="RecipeVault.MainPage">

    <ScrollView BackgroundColor="White">
        <Grid ColumnDefinitions="Auto, *">
            <partial:Sidebar Grid.Column="0" />
            <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="20,0,0,0" Grid.Column="1" BackgroundColor="{StaticResource Gray100}" RowSpacing="20">
                <Label Text="Search bar" TextColor="Black" Grid.Row="0" BackgroundColor="White"/>
                <Label Text="Filter/Sort" TextColor="Black" Grid.Row="1" BackgroundColor="White"/>
                <Label Text="Recipes" TextColor="Black" Grid.Row="2" Style="{StaticResource Headline}"/>

                <partial:RecipeArea Grid.Row="3"/>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
