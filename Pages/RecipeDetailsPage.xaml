<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeVault.Pages.RecipeDetailsPage"
             xmlns:viewmodel="clr-namespace:RecipeVault.ViewModels"
             x:DataType="viewmodel:RecipeDetailsViewModel"
             xmlns:partial="clr-namespace:RecipeVault.ViewPartials"
             xmlns:model="clr-namespace:RecipeVault.Model"
             xmlns:service="clr-namespace:RecipeVault.Services">

    <ScrollView BackgroundColor="{StaticResource Gray100}"
                Padding="10">
        <Border BackgroundColor="White"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1"
                Stroke="{StaticResource Gray100}"
                Padding="20">
            <VerticalStackLayout Padding="40,0,40,0">
                <Label Text="{Binding SelectedRecipe.Name}"
                       HorizontalOptions="Center"
                       FontSize="40"
                       FontAttributes="Bold"
                       Grid.Row="0"
                       Margin="0,0,0,30"
                       TextColor="Black"/>
                
                <BoxView Color="Black"
                         HeightRequest="3"
                         WidthRequest="200"
                         HorizontalOptions="Center"
                         Margin="0,0,0,40" />

                <Label Text="{Binding SelectedRecipe.Description}" 
                       TextColor="Black"
                       FontSize="Subtitle"
                       Margin="0,40,0,50"/>

                <HorizontalStackLayout Margin="0,0,0,40">
                    <HorizontalStackLayout Margin="0,0,80,0">
                        <Image Source="level_slider_icon.png"
                               WidthRequest="30"
                               Margin="0,0,10,0"/>
                        <Label Text="Difficulty: " 
                               TextColor="Black"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"/>
                        <Label Text="{Binding SelectedRecipe.Difficulty}" 
                               TextColor="Black"
                               FontSize="20"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Margin="0,0,80,0">
                        <Image Source="timer_icon.png"
                               WidthRequest="30"
                               Margin="0,0,10,0"/>
                        <Label Text="Prep Time: " 
                               TextColor="Black"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"/>
                        <Label Text="{Binding SelectedRecipe.FormattedPrepTime}" 
                               TextColor="Black"
                               FontSize="20"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Margin="0,0,80,0">
                        <Image Source="timer_icon.png"
                               WidthRequest="30"
                               Margin="0,0,10,0"/>
                        <Label Text="Cook Time: " 
                               TextColor="Black"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"/>
                        <Label Text="{Binding SelectedRecipe.FormattedCookTime}" 
                               TextColor="Black"
                               FontSize="20"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>

                <HorizontalStackLayout Margin="0,0,0,50"
                                       Spacing="50">
                    <HorizontalStackLayout>
                        <Label Text="Serving Size:"
                               TextColor="Black"
                               FontSize="20"
                               FontAttributes="Bold"
                               Margin="0,0,10,0"
                               VerticalOptions="Center"/>
                        <Entry x:Name="servingSizeEntry"
                               Text="{Binding NewServingSize}"
                               Placeholder="{Binding SelectedRecipe.ServingSize}"
                               TextColor="Black"
                               FontSize="20"
                               MaxLength="3"
                               Keyboard="Numeric"
                               BackgroundColor="{StaticResource Gray100}"
                               Margin="0,0,20,0" />
                        <partial:MainButton ButtonText="Apply"
                                            ButtonCommand="{Binding ServingSizeBtnClickedCommand}"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>

                <HorizontalStackLayout Margin="0,0,0,50">
                    <Label Text="Weight Measurement Unit:"
                           TextColor="Black"
                           FontSize="20"
                           FontAttributes="Bold"
                           Margin="0,0,10,0"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout VerticalOptions="Center"
                                          Margin="0,0,30,0">
                        <Picker ItemsSource="{Binding WeightMeasurementUnits}"
                                SelectedItem="{Binding SelectedWeightMeasurementUnitSource}" 
                                BackgroundColor="{StaticResource Gray100}"
                                TextColor="{StaticResource Gray500}"
                                FontSize="20"
                                WidthRequest="150"/>
                    </VerticalStackLayout>

                    <Label Text="to"
                           TextColor="Black"
                           FontSize="20"
                           Margin="0,0,30,0"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout VerticalOptions="Center"
                                          Margin="0,0,30,0">
                        <Picker ItemsSource="{Binding WeightMeasurementUnits}"
                                SelectedItem="{Binding SelectedWeightMeasurementUnitTarget}" 
                                BackgroundColor="{StaticResource Gray100}"
                                TextColor="{StaticResource Gray500}"
                                FontSize="20"
                                WidthRequest="150"/>
                    </VerticalStackLayout>

                    <partial:MainButton ButtonText="Apply"
                                        ButtonCommand="{Binding ConvertMeasurementUnitCommand}"
                                        ButtonCommandParameters="{Static model:MeasurementUnitCategory.Weight}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Margin="0,0,0,50">
                    <Label Text="Volume Measurement Unit:"
                           TextColor="Black"
                           FontSize="20"
                           FontAttributes="Bold"
                           Margin="0,0,10,0"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout VerticalOptions="Center"
                                         Margin="0,0,30,0">
                        <Picker ItemsSource="{Binding VolumeMeasurementUnits}"
                                SelectedItem="{Binding SelectedVolumeMeasurementUnitSource}" 
                                BackgroundColor="{StaticResource Gray100}"
                                TextColor="{StaticResource Gray500}"
                                FontSize="20"
                                WidthRequest="150"/>
                    </VerticalStackLayout>

                    <Label Text="to"
                           TextColor="Black"
                           FontSize="20"
                           Margin="0,0,30,0"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout VerticalOptions="Center"
                                         Margin="0,0,30,0">
                        <Picker ItemsSource="{Binding VolumeMeasurementUnits}"
                                SelectedItem="{Binding SelectedVolumeMeasurementUnitTarget}" 
                                BackgroundColor="{StaticResource Gray100}"
                                TextColor="{StaticResource Gray500}"
                                FontSize="20"
                                WidthRequest="150"/>
                    </VerticalStackLayout>

                    <partial:MainButton ButtonText="Apply"
                                        ButtonCommand="{Binding ConvertMeasurementUnitCommand}"
                                        ButtonCommandParameters="{Static model:MeasurementUnitCategory.Volume}"/>
                </HorizontalStackLayout>

                <Grid ColumnDefinitions="*,*"
                      Margin="0,0,0,50">
                    <VerticalStackLayout>
                        <Label Grid.Row="0"
                               Text="Ingredients:"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,0,0,30"/>
                        <CollectionView ItemsSource="{Binding SelectedRecipe.Ingredients}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical"
                                                 Span="1"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:Ingredient">
                                    <Grid ColumnDefinitions="auto, auto"
                                          ColumnSpacing="15">
                                        <Image Source="small_square_icon.png" 
                                               WidthRequest="15"
                                               VerticalOptions="Center"
                                               Grid.Column="0"/>
                                        <Label Text="{Binding FormattedIngredientInfo}" 
                                               TextColor="Black"
                                               FontSize="16"
                                               Grid.Column="1"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <Border Grid.Column="1" 
                            WidthRequest="500"
                            HeightRequest="500"
                            BackgroundColor="White"
                            Stroke="{StaticResource Gray100}"
                            StrokeThickness="1">
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource Gray400Brush}"
                                    Offset="10,10"
                                    Radius="5"
                                    Opacity="0.8" />
                        </Border.Shadow>
                        <Image Source="{Binding SelectedRecipe.Gallery[0].SourceImage}"
                               Aspect="AspectFit"/>
                    </Border>
                </Grid>

                <Grid RowDefinitions="auto,auto">
                    <Label Grid.Row="0"
                               Text="Instructions:"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,0,0,30"/>

                    <CollectionView ItemsSource="{Binding SelectedRecipe.Instructions}"
                                    Grid.Row="1">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                             Span="1"
                                             VerticalItemSpacing="30"/>
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:RecipeInstruction">
                                <Grid RowDefinitions="auto,*" 
                                      RowSpacing="10">
                                    <HorizontalStackLayout Grid.Row="0">
                                        <Label Text="Step"
                                               TextColor="Black"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               Margin="0,0,5,0"/>
                                        <Label Text="{Binding Index}"
                                               TextColor="Black"
                                               FontSize="20"
                                               FontAttributes="Bold"/>
                                        <Label Text=":"
                                               TextColor="Black"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               Margin="0,0,20,0"/>

                                        <FlexLayout Wrap="Wrap"
                                                    Direction="Column"
                                                    JustifyContent="Start"
                                                    AlignItems="Start"
                                                    VerticalOptions="Center"
                                                    BindableLayout.ItemsSource="{Binding IngredientsRequired}">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate x:DataType="model:InstructionIngredient">
                                                    <Border BackgroundColor="{Binding MeasurementUnitColor}"
                                                            StrokeShape="RoundRectangle 20"
                                                            Stroke="{Binding MeasurementUnitColor}"
                                                            Padding="10,5"
                                                            Margin="0,0,5,0">
                                                        <HorizontalStackLayout>
                                                            <Label Text="{Binding FormattedIngredientInfo}"
                                                                   TextColor="White"
                                                                   FontAttributes="Bold"
                                                                   FontSize="14" 
                                                                   CharacterSpacing="2"/>
                                                        </HorizontalStackLayout>
                                                    </Border>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </FlexLayout>
                                    </HorizontalStackLayout>
                                    <Label Text="{Binding Details}"
                                           Grid.Row="1"
                                           TextColor="Black"
                                           FontSize="20"
                                           LineBreakMode="WordWrap"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </VerticalStackLayout>
        </Border>
    </ScrollView>
</ContentPage>
