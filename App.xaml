<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RecipeVault"
             xmlns:services="clr-namespace:RecipeVault.Services"
             Shell.NavBarIsVisible="False"
             x:Class="RecipeVault.App">
    <Application.Resources>
        <ResourceDictionary>
            <services:DarkenColorConverter x:Key="DarkenColorConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Sizes.xaml" />
                <ResourceDictionary Source="/Resources/Styles/SidebarItemHighlight.xaml" />
                <ResourceDictionary Source="/Resources/Styles/ButtonHoverStyle.xaml" />
                <ResourceDictionary Source="/Resources/Styles/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
