<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeVault.ViewPartials.RecipeCard"
             xmlns:models="clr-namespace:RecipeVault.Model"
             x:DataType="models:Recipe">
    <Border StrokeShape="RoundRectangle 10"
        Stroke="{StaticResource Gray200}"
        StrokeThickness="1"
        Padding="20"
        Margin="5"
        BackgroundColor="White">
        <Border.Shadow>
            <Shadow Brush="Black"
                Offset="5,5"
                Radius="2"
                Opacity="0.1" />
        </Border.Shadow>

        <VerticalStackLayout Spacing="5">
            <Image Source="{Binding Gallery[0].SourceImage}"
               Aspect="AspectFill"
               HeightRequest="200"
               WidthRequest="200"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="0,0,0,5">
                <Image.Clip>
                    <RoundRectangleGeometry CornerRadius="4" Rect="0,0,200,200"/>
                </Image.Clip>
            </Image>

            <Label Text="{Binding Name}" 
               TextColor="Black"
               FontSize="18"
               Style="{StaticResource Headline}"
               FontAttributes="Bold"
               LineBreakMode="TailTruncation"
               MaxLines="2"
               Margin="0,5,0,5"
               HorizontalOptions="Center"
               MinimumHeightRequest="30"/>

            <Grid ColumnDefinitions="*,*"
              RowSpacing="2"
              ColumnSpacing="5">
                <HorizontalStackLayout Grid.Column="0" Spacing="5">
                    <Image Source="level_slider_icon.png"
                       HeightRequest="16"
                       WidthRequest="16">
                    </Image>

                    <Label Text="{Binding Difficulty}"
                       
                       TextColor="Black"
                       VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1"
                                   Spacing="5">
                    <Image Source="timer_icon.png"
                       HeightRequest="16"
                       WidthRequest="16"></Image>
                    <Label Text="{Binding FormattedCookTime}"
                       
                       TextColor="Black"
                       VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
            <Label Text="{Binding Description}"
               
               TextColor="Black"
               LineBreakMode="TailTruncation"
               MaxLines="2"
               Margin="0,5,0,0"
               MinimumHeightRequest="10"/>
        </VerticalStackLayout>
    </Border>
</ContentView>
