<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeVault.ViewPartials.RecipeAreaList"
             xmlns:partial="clr-namespace:RecipeVault.ViewPartials"
             xmlns:model="clr-namespace:RecipeVault.Model"
             xmlns:viewmodel="clr-namespace:RecipeVault.ViewModels">
    <CollectionView ItemsSource="{Binding Recipes}"
                SelectionMode="None">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" 
                         Span="1"
                         VerticalItemSpacing="2"/>
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Recipe">
                <partial:RecipeCard BindingContext="{Binding .}">
                    <Border StrokeShape="RoundRectangle 30"
                            Padding="20,10"
                            BackgroundColor="White"
                            Style="{StaticResource RecipeListItemHighlight}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainPageViewModel}}, Path=NavigateToRecipeDetailsPageCommand}"
                                                  CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>

                        <Grid ColumnDefinitions="auto,auto,auto,auto, auto">
                            <Label Text="{Binding Name}"
                                   Grid.Column="0"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                            
                            <BoxView WidthRequest="1" 
                                     Grid.Column="1"
                                     Margin="20,0"/>
                            
                            <HorizontalStackLayout Grid.Column="2">
                                <Image Source="timer_icon.png"
                                       WidthRequest="20"
                                       Margin="0,0,10,0"/>
                                <Label Text="Prep Time: " 
                                       TextColor="Black"
                                       FontSize="20"
                                       VerticalOptions="Center"
                                       Margin="0,0,10,0"/>
                                <Label Text="{Binding FormattedCookTime}" 
                                       TextColor="Black"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       Margin="0,0,30,0"/>

                                <Image Source="level_slider_icon.png"
                                       WidthRequest="20"
                                       Margin="0,0,10,0"/>
                                <Label Text="Prep Time: " 
                                       TextColor="Black"
                                       FontSize="20"
                                       VerticalOptions="Center"
                                       Margin="0,0,10,0"/>
                                <Label Text="{Binding Difficulty}" 
                                       TextColor="Black"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            
                            <BoxView WidthRequest="1" 
                                     Grid.Column="3"
                                     Margin="20,0"/>
                            
                            <CollectionView ItemsSource="{Binding Tags}"
                                            Grid.Column="4"
                                            WidthRequest="200"
                                            HorizontalOptions="End">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="5" />
                                </CollectionView.ItemsLayout>

                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="model:Tag">
                                        <Border StrokeShape="RoundRectangle 20"
                                                Stroke="{Binding TagColorConverted}"
                                                BackgroundColor="{Binding TagColorConverted}"
                                                Padding="15,0">
                                            <Label Text="{Binding Name}"
                                                   VerticalOptions="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </Border>
                </partial:RecipeCard>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.EmptyView>
            <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Padding="20">
                <Label Text="No recipe found."
                   
                   TextColor="Black"
                   HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </CollectionView.EmptyView>
    </CollectionView>
</ContentView>
